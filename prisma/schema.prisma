generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  
}


// Users

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  phone     String
  password  String
  role      Role      @default(USER)
  avatar    String?   // Photo de profil
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  orders    Order[]
  carts     Cart[]
  favorites Favorite[]

  @@map("users")
}


// Products
model Product {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Float
  category    String?
  likes       Int       @default(0)
  available   Boolean   @default(true)
  stock       Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  media       ProductMedia[] 
  cartItems   CartItem[]
  orderItems  OrderItem[]
  favorites   Favorite[]
  
  @@map("products")
}

//  ProductMedia
model ProductMedia {
  id         String      @id @default(uuid())
  productId  String
  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  url        String
  publicId   String      // Cloudinary public_id
  type       MediaType   @default(IMAGE) // ← Nouveau champ
  altText    String?
  order      Int         @default(0)
  isFeatured Boolean     @default(false)
  duration   Int?        // Durée en secondes (pour vidéos)
  size       Int?        // Taille en bytes
  format     String?     // mp4, webp, jpg, etc.
  createdAt  DateTime    @default(now())
  
  @@map("product_media")
  @@index([productId])
  @@index([type])
}





// ----------------------------
// Shopping carts
// ----------------------------
model Cart {
  id        String      @id @default(uuid())
  userId    String?
  user      User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    CartStatus  @default(TEMP)
  name      String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  items     CartItem[]
  orders    Order[]     

  @@map("carts")
}


model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  note      String?  // Special instructions

  @@unique([cartId, productId])
  @@map("cart_items")
}

// ----------------------------
// Orders
// ----------------------------
model Order {
  id              String      @id @default(uuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  orderNumber     String      @unique
  deliveryName    String
  deliveryPhone   String
  deliveryAddress String?
  scheduledAt     DateTime?
  status          OrderStatus @default(PENDING)
  total           Float
  paymentMethod   String?
  isPaid          Boolean     @default(false)
  whatsappSent    Boolean     @default(false)
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  cartId          String
  cart            Cart        @relation(fields: [cartId], references: [id])

  items           OrderItem[]

  @@map("orders")
}


// Items in an order
model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
  note      String?

  @@map("order_items")
}

// ----------------------------
// Favorites
// ----------------------------
model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@map("favorites")
}

// ----------------------------
// WhatsApp message scheduler
// ----------------------------
model WhatsAppSchedule {
  id          String          @id @default(uuid())
  message     String
  type        WhatsAppMessageType @default(TEXT)
  mediaUrl    String?   
  scheduledAt DateTime
  status      ScheduleStatus  @default(PENDING)
  sentAt      DateTime?
  error       String?
  createdAt   DateTime        @default(now())

  recipients  WhatsAppRecipient[]

  @@map("whatsapp_schedules")
}
// Destinataires séparés
model WhatsAppRecipient {
  id           String          @id @default(uuid())
  scheduleId   String
  recipient    String
  type         RecipientType
  status       ScheduleStatus  @default(PENDING)
  error        String?

  schedule     WhatsAppSchedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  @@map("whatsapp_recipients")
  @@index([status])
  @@index([type])
}
model WhatsAppGroup {
  id                String   @id @default(uuid())
  jid               String   @unique // ID du groupe WhatsApp (ex: 120363XXX@g.us)
  name              String
  description       String?
  participantsCount Int      @default(0)
  isActive          Boolean  @default(true)
  lastSyncAt        DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("whatsapp_groups")
  @@index([jid])
  @@index([isActive])
}


model AutoReply {
  id          String   @id @default(uuid())
  keyword     String   @unique // Mot-clé déclencheur (ex: "prix", "horaires")
  response    String   @db.Text // Réponse automatique
  isActive    Boolean  @default(true)
  matchType   MatchType @default(CONTAINS) // Type de correspondance
  priority    Int      @default(0) // Priorité (0 = basse, 10 = haute)
  usageCount  Int      @default(0) // Nombre de fois utilisé
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("auto_replies")
  @@index([keyword])
  @@index([isActive])
}

// ============================================
// CONTACTS WHATSAPP (CRM)
// ============================================
model WhatsAppContact {
  id              String   @id @default(uuid())
  jid             String   @unique // ID WhatsApp (ex: 237657857548@s.whatsapp.net)
  name            String?
  phone           String
  pushName        String?  // Nom affiché sur WhatsApp
  
  // Données business
  tags            String[] // ["vip", "client-regulier", "prospect"]
  notes           String?  @db.Text
  totalOrders     Int      @default(0)
  totalSpent      Float    @default(0)
  lastOrderDate   DateTime?
  
  // Engagement
  firstMessageDate DateTime?
  lastMessageDate  DateTime?
  messageCount     Int      @default(0)
  isBlocked        Boolean  @default(false)
  isFavorite       Boolean  @default(false)
  
  // Segmentation
  segment         CustomerSegment @default(PROSPECT)
  source          String?  // "facebook", "referral", "walk-in", "whatsapp"
  
  // Avatar
  avatarUrl       String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  messages        Message[]
  followUps       FollowUp[]
  
  @@map("whatsapp_contacts")
  @@index([jid])
  @@index([phone])
  @@index([segment])
  @@index([lastMessageDate])
}


// ============================================
// HISTORIQUE DES CONVERSATIONS
// ============================================
model Message {
  id              String   @id @default(uuid())
  
  // Identifiants WhatsApp
  messageId       String   @unique // ID du message WhatsApp
  conversationId  String   // ID de la conversation (jid)
  
  // Contact
  contactId       String
  contact         WhatsAppContact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  // Contenu
  type            MessageType
  content         String?  @db.Text
  caption         String?
  mediaUrl        String?  // URL du média (image, vidéo, audio)
  mediaSize       Int?     // Taille en bytes
  mediaMimeType   String?
  
  // Direction
  direction       MessageDirection
  isFromMe        Boolean
  
  // Statut
  status          MessageStatus @default(SENT)
  readAt          DateTime?
  deliveredAt     DateTime?
  
  // Métadonnées
  isAutoReply     Boolean  @default(false)
  autoReplyId     String?  // ID de la règle de réponse automatique utilisée
  
  // Contexte
  quotedMessageId String?  // Si c'est une réponse à un message
  isForwarded     Boolean  @default(false)
  
  timestamp       DateTime @default(now())
  createdAt       DateTime @default(now())
  
  @@map("messages")
  @@index([contactId])
  @@index([conversationId])
  @@index([timestamp])
  @@index([direction])
  @@index([isAutoReply])
}


// ============================================
// MESSAGES DE SUIVI AUTOMATIQUES
// ============================================
model FollowUpTemplate {
  id          String   @id @default(uuid())
  name        String   // Ex: "Confirmation commande"
  description String?
  
  // Déclencheur
  trigger     FollowUpTrigger
  
  // Délai
  delayDays   Int      @default(0)
  delayHours  Int      @default(0)
  delayMinutes Int     @default(0)
  
  // Contenu
  message     String   @db.Text
  mediaUrl    String?
  mediaType   WhatsAppMessageType?
  
  // Conditions
  conditions  Json?    // Conditions avancées (JSON)
  
  // Statut
  isActive    Boolean  @default(true)
  priority    Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  followUps   FollowUp[]
  
  @@map("follow_up_templates")
  @@index([trigger])
  @@index([isActive])
}



model FollowUp {
  id          String   @id @default(uuid())
  
  // Lien avec le contact
  contactId   String
  contact     WhatsAppContact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  // Template utilisé
  templateId  String
  template    FollowUpTemplate @relation(fields: [templateId], references: [id])
  
  // Programmation
  scheduledAt DateTime
  
  // Statut
  status      FollowUpStatus @default(PENDING)
  sentAt      DateTime?
  error       String?
  
  // Métadonnées
  metadata    Json?    // Données contextuelles (orderId, etc.)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("follow_ups")
  @@index([contactId])
  @@index([templateId])
  @@index([scheduledAt, status])
}



// ----------------------------
// Enums
// ----------------------------
enum Role {
  USER
  ADMIN
  SUPER
}

enum FollowUpTrigger {
  AFTER_ORDER          // X jours après une commande
  AFTER_PAYMENT        // X heures après un paiement
  AFTER_DELIVERY       // X jours après une livraison
  AFTER_FIRST_MESSAGE  // X jours après le 1er message
  AFTER_LAST_MESSAGE   // X jours après le dernier message
  INACTIVITY           // X jours d'inactivité
  BIRTHDAY             // Jour d'anniversaire
  CUSTOM               // Personnalisé
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  STICKER
  LOCATION
  CONTACT
  POLL
}

enum FollowUpStatus {
  PENDING
  SENT
  FAILED
  CANCELLED
}

enum MessageDirection {
  INCOMING  // Message reçu
  OUTGOING  // Message envoyé
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}
enum CustomerSegment {
  PROSPECT      // Jamais commandé
  NEW           // 1ère commande
  REGULAR       // 2-5 commandes
  VIP           // 5+ commandes ou >50k FCFA
  INACTIVE      // Pas de commande depuis 30+ jours
  BLOCKED       // Bloqué
}

enum CartStatus {
  TEMP      // Temporary / guest cart
  SAVED     // Saved cart
  FINALIZED // Converted to order
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum ScheduleStatus {
  PENDING
  SENT
  FAILED
}

enum RecipientType {
  PRIVATE
  GROUP
}
enum WhatsAppMessageType {
  TEXT
  IMAGE
  VIDEO
  STATUS
}
enum MatchType {
  EXACT       // Correspondance exacte (ex: "prix")
  CONTAINS    // Contient le mot (ex: "quel est le prix")
  STARTS_WITH // Commence par (ex: "prix...")
  ENDS_WITH   // Finit par (ex: "...prix")
  REGEX       // Expression régulière
}

// Media des produits
enum MediaType {
  IMAGE
  VIDEO
}